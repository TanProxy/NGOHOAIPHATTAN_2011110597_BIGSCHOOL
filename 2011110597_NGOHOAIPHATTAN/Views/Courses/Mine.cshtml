@model IEnumerable<_2011110597_NGOHOAIPHATTAN.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>
<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DataTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DataTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
            </div>
            <div class="action">
                
                <a href="@Url.Action("Create", "Courses" , new { id = course.Id})">Edit
                </a>
                |
                <a href="">Delete</a>
            </div>
             
            
        </li>
        
    }
</ul>
